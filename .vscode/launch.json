{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript (Backend)",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["src/index.ts"],
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.json"
      },
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}